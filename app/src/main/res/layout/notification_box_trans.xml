<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/Layout_notify_msearch"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/total_switch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/notify_item_bg_transe"
            android:drawableTop="@drawable/notify_on"
            android:gravity="center"
            android:text="@string/notify_total_switch_on"
            android:textColor="@color/text_color_notify"
            android:textSize="@dimen/text_size_very_tiny"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/divider"/>

        <TextView
            android:id="@+id/monitor_click"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/notify_item_bg_transe"
            android:drawableTop="@drawable/notify_click_on"
            android:gravity="center"
            android:text="@string/notify_monitor_click_on"
            android:textColor="@color/text_color_notify"
            android:textSize="@dimen/text_size_very_tiny"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/divider"/>

        <TextView
            android:id="@+id/monitor_clipboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/notify_item_bg_transe"
            android:drawableTop="@drawable/notify_clipboard_on"
            android:gravity="center"
            android:text="@string/notify_monitor_clipboard_on"
            android:textColor="@color/text_color_notify"
            android:textSize="@dimen/text_size_very_tiny"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/divider"/>

        <TextView
            android:id="@+id/universal_copy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/notify_item_bg_transe"
            android:drawableTop="@drawable/notify_copy"
            android:gravity="center"
            android:text="@string/notify_copy_title"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_very_tiny"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/divider"/>

        <TextView
            android:id="@+id/screen_cap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/notify_item_bg_transe"
            android:drawableTop="@drawable/notify_screen"
            android:gravity="center"
            android:text="@string/notify_srceen_cap"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_very_tiny"/>

    </LinearLayout>


</LinearLayout>