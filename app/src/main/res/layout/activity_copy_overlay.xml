<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/overlay_root"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/borders"
             android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?colorPrimary"
        app:elevation="4.0dip"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_copy_main"
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        android:layout_gravity="bottom|right|center"
        android:layout_marginBottom="@dimen/margin_four"
        android:layout_marginRight="@dimen/margin_four"
        android:contentDescription="@string/action_copy"
        android:src="@mipmap/ic_float_copy"
        android:visibility="invisible"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/exit_button"
        android:layout_width="36.0dip"
        android:layout_height="36.0dip"
        android:layout_gravity="bottom|right|center"
        android:layout_marginBottom="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:contentDescription="@android:string/cancel"
        android:src="@mipmap/ic_close_white_24dp"
        android:visibility="invisible"
        app:fabSize="mini"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/exit_full_screen_button"
        android:layout_width="36.0dip"
        android:layout_height="36.0dip"
        android:layout_gravity="bottom|right|center"
        android:layout_marginBottom="@dimen/margin_normal"
        android:layout_marginRight="76dp"
        android:contentDescription="@android:string/cancel"
        android:src="@mipmap/ic_arrow_back_white_24dp"
        android:visibility="invisible"
        app:fabSize="mini"
        />
</FrameLayout>