    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>

    <RelativeLayout
        android:id="@+id/browser_setting"
        style="@style/cardViewRelativeLayoutSelector"
        android:duplicateParentState="false">

        <android.support.v7.widget.AppCompatTextView
            style="@style/cardViewTextViewInLayoutLeft"
            android:text="@string/use_app_browser"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/browser_switch"
            style="@style/switchStyle"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>

    <RelativeLayout
        android:id="@+id/float_trigger_rl"
        style="@style/hintTextViewRelativeLayoutSelector"
        android:duplicateParentState="false">


        <com.time.cat.mvp.view.HintTextView
            android:id="@+id/float_trigger_tv"
            style="@style/hintTextViewInLayoutLeft"
            app:hint="@string/float_trigger_request"
            app:hintTextColor="@color/text_color_import"
            app:msg="@string/float_trigger"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/float_trigger_switch"
            style="@style/hintTextViewswitchStyle"/>
    </RelativeLayout>

</LinearLayout>