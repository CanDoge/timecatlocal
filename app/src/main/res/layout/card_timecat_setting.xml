<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/content_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        style="@style/cardViewRelativeLayoutSelector"
        android:duplicateParentState="false">

        <android.support.v7.widget.AppCompatTextView
            style="@style/cardViewTextViewInLayoutLeft"
            android:text="@string/timecat_setting_card_title"
            android:textColor="@color/text_color_notify"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>

    <RelativeLayout
        android:id="@+id/setting_timecat"
        style="@style/hintTextViewRelativeLayoutSelector"
        android:duplicateParentState="false">

        <com.time.cat.mvp.view.HintTextView
            style="@style/hintTextViewInLayoutLeft"
            app:hint="@string/setting_timecat_intro"
            app:msg="@string/setting_timecat"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>

    <RelativeLayout
        android:id="@+id/setting_search_engine"
        style="@style/hintTextViewRelativeLayoutSelector"
        android:duplicateParentState="false">

        <com.time.cat.mvp.view.HintTextView
            android:id="@+id/show_float_view_tv"
            style="@style/hintTextViewInLayoutLeft"
            app:hint="@string/setting_search_engine_into"
            app:msg="@string/setting_search_engine"/>

    </RelativeLayout>
